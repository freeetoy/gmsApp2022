<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_hole1"
        android:layout_width="@dimen/bottom_layout_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="누출확인"
        android:textColor="#000"
        android:textSize="@dimen/bottom_short_tsize" />

    <Button
        android:id="@+id/btn_vacuum1"
        android:layout_width="@dimen/bottom_layout_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="진공배기"
        android:textSize="@dimen/bottom_short_tsize"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btn_chargedt1"
        android:layout_width="@dimen/bottom_long_layout_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/bottom_long_tsize"
        android:text="충전기한확인"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="@dimen/bottom_cancel_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="닫 기"
        android:textSize="@dimen/bottom_short_tsize"
        android:textColor="#000"/>

</LinearLayout>