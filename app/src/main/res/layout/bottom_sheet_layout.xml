<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#E6E5E5">

        <Button
            android:id="@+id/btn_incar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="충전"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_freeback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_freeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="무료회수"
            android:textColor="#000"
            android:textSize="@dimen/button_4_size"
            app:layout_constraintEnd_toStartOf="@+id/btn_buyback"
            app:layout_constraintStart_toEndOf="@+id/btn_incar"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_buyback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="매입"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_close"
        app:layout_constraintStart_toEndOf="@+id/btn_freeback"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="닫 기"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_buyback"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체삭제"
        android:textColor="#000"
        android:textSize="@dimen/button_4_size"
        app:layout_constraintEnd_toStartOf="@+id/btn_chargedt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_incar" />

        <Button
            android:id="@+id/btn_chargedt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="충전기한확인"
            android:textSize="@dimen/bottom_long_tsize"
            app:layout_constraintEnd_toStartOf="@+id/btn_hole"
            app:layout_constraintStart_toEndOf="@+id/btn_deleteAll"
            app:layout_constraintTop_toBottomOf="@+id/btn_freeback" />

        <Button
            android:id="@+id/btn_hole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="누출확인"
            android:textSize="@dimen/button_4_size"
            app:layout_constraintEnd_toStartOf="@+id/btn_vacuum"
            app:layout_constraintStart_toEndOf="@+id/btn_chargedt"
            app:layout_constraintTop_toBottomOf="@+id/btn_buyback" />

        <Button
            android:id="@+id/btn_vacuum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="진공배기"
            android:textSize="@dimen/button_4_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_hole"
            app:layout_constraintTop_toBottomOf="@+id/btn_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>

